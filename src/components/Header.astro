---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../config";
import "@fontsource/josefin-sans/300.css";
import "@fontsource/montserrat/400.css";
import "@fontsource/ibm-plex-sans/500.css";
---

<header
  class="my-0 mx-auto flex w-full py-4 px-4 font-ibm-plex-sans font-medium sm:px-0"
>
  <HeaderLink class="order-last sm:-order-1" href="/">{SITE_TITLE}</HeaderLink>
  <div class="float-left mt-2 mr-4 flex-1 sm:hidden">
    <button id="open-navbar-btn">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="h-6 w-6 text-white"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>
    </button>
  </div>
  <nav
    id="navbar"
    class="absolute right-4 top-16 hidden dark:bg-slate-900 sm:relative sm:right-0 sm:top-0 sm:block sm:flex-1"
  >
    <div
      class="flex flex-col border-2 border-solid border-white sm:relative sm:float-right sm:block sm:border-none"
    >
      <HeaderLink href="/" class="sm:hidden">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <!--<HeaderLink href="https://twitter.com/astrodotbuild" target="_blank"
        >Twitter</HeaderLink
      >
      <HeaderLink href="https://github.com/withastro/astro" target="_blank"
        >GitHub</HeaderLink
      >-->
    </div>
  </nav>
</header>

<script>
  function openNavbar() {
    const navbar = document.getElementById("navbar");
    if (navbar.classList.contains("hidden")) {
      navbar.classList.remove("hidden");
      navbar.classList.add("block");
    } else {
      navbar.classList.remove("block");
      navbar.classList.add("hidden");
    }
  }

  document
    .getElementById("open-navbar-btn")
    .addEventListener("click", openNavbar);
</script>
