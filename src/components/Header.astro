---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../config";
import "@fontsource/josefin-sans/300.css";
import "@fontsource/montserrat/400.css";
import "@fontsource/ibm-plex-sans/500.css";
---

<header
  class="my-0 mx-auto flex w-full py-4 px-4 font-ibm-plex-sans font-medium sm:px-0"
>
  <div
    id="blur"
    class="absolute -left-2 -top-2 hidden h-screen w-screen bg-black/30 backdrop-blur-sm"
  >
  </div>

  <HeaderLink class="order-first sm:-order-1 !px-4 !py-2" href="/">
    {SITE_TITLE}
  </HeaderLink>
  <div class="float-left mt-2 mr-4 flex-1 sm:hidden">
    <button id="open-navbar-btn" class="float-right">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="h-6 w-6 text-white"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>
    </button>
  </div>
  <nav
    id="navbar"
    class="absolute right-4 top-4 hidden rounded-lg shadow-lg dark:bg-slate-800 sm:relative sm:right-0 sm:top-0 sm:block sm:flex-1 sm:rounded-none sm:shadow-none sm:dark:bg-slate-900"
  >
    <div
      class="flex w-64 flex-col sm:relative sm:float-right sm:block sm:w-auto sm:border-none"
    >
      <HeaderLink href="/" class="sm:hidden">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>

      <button id="close-navbar-btn" class="absolute right-6 top-6 sm:hidden">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="h-6 w-6 text-white"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </nav>
</header>

<script>
  function toggleNavbar() {
    const navbar = document.getElementById("navbar");
    const blur = document.getElementById("blur");
    if (navbar.classList.contains("hidden")) {
      navbar.classList.remove("hidden");
      navbar.classList.add("block");
      blur.classList.remove("hidden");
    } else {
      navbar.classList.remove("block");
      navbar.classList.add("hidden");
      blur.classList.add("hidden");
    }
  }

  document
    .getElementById("open-navbar-btn")
    .addEventListener("click", toggleNavbar);

  document
    .getElementById("close-navbar-btn")
    .addEventListener("click", toggleNavbar);
</script>
