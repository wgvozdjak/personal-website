---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import '@fontsource/josefin-sans/300.css';
---

<!DOCTYPE html>
<html lang="en-us">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<div class="wrapper flex flex-col min-h-screen">
			<Header title={SITE_TITLE} />

			<main class="px-4 mt-1/2 flex flex-1">
				<div id="test" class="flex items-center flex-1 justify-center">
					<div class="font-josefin float-left w-1/2">
						<h1 class="font-light text-5xl">
							hi! i'm
						</h1>
						<h1 class="text-8xl font-bold ml-10 -mt-4">
							william.
						</h1>
					</div>

					<div class="float-right w-1/2">
						<img src="/test2.png" width="500px"/>
					</div>
				</div>
			</main>
		</div>
		<Footer />
	</body>
</html>
