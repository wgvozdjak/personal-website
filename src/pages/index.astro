---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HomeLink from "../components/HomeLink.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import "@fontsource/josefin-sans/300.css";
import "@fontsource/inter/700.css";
import "@fontsource/ibm-plex-sans/700.css";
import "@fontsource/ibm-plex-sans/400.css";
import "@fontsource/montserrat/700.css";
import "@fontsource/montserrat/400.css";
---

<!DOCTYPE html>
<html lang="en-us" class="dark">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />

    <style>
      @media (max-width: 24rem) {
        #homepage-image {
          @apply w-full;
        }
      }
    </style>
  </head>
  <body class="max-w-screen-lg dark:bg-slate-900">
    <div class="flex min-h-screen flex-col">
      <Header title={SITE_TITLE} />

      <main
        class="flex flex-1 flex-col items-center justify-center px-8 sm:px-4"
      >
        <div class="grid">
          <div class="flex flex-col items-center">
            <h1
              class="mb-2 inline-block font-ibm-plex-sans text-5xl font-bold leading-snug"
            >
              <span class="font-inter dark:text-slate-300">Hi! I'm</span>
              <span
                class="bg-gradient-to-br from-sky-400 to-fuchsia-400 bg-clip-text text-transparent"
                >William Gvozdjak</span
              >
              <span class="align-top text-4xl font-bold leading-[4rem]">ðŸ‘‹</span
              >
            </h1>
            <p
              class="mb-6 font-ibm-plex-sans text-xl font-normal dark:text-slate-400"
            >
              I'm a high-school student, web developer, mathlete, and
              programmer.
            </p>
            <div
              class="hidden flex-row space-x-6 font-ibm-plex-sans text-base font-medium sm:flex"
            >
              <a
                href="/about"
                class="cursor-pointer rounded bg-blue-600 px-6 py-3 text-slate-300 shadow-lg transition duration-200 hover:bg-blue-800"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="-ml-1 mb-[2px] inline h-[17px] w-[17px]"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"
                  ></path>
                </svg>
                About
              </a>
              <a
                href="/projects"
                class="cursor-pointer rounded bg-blue-600 px-6 py-3 text-slate-300 shadow-lg transition duration-200 hover:bg-blue-800"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="-ml-1 mb-[2px] inline h-[17px] w-[17px]"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"
                  ></path>
                </svg>
                Projects
              </a>
              <a
                href="/blog"
                class="cursor-pointer rounded bg-blue-600 px-6 py-3 text-slate-300 shadow-lg transition duration-200 hover:bg-blue-800"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="-ml-1 mb-[2px] inline h-[17px] w-[17px]"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"
                  ></path>
                </svg>
                Blog
              </a>
            </div>
            <div class="flex flex-col items-center">
              <img
                height="224"
                id="homepage-image"
                class="mt-6 w-96"
                src="/homepageImage.png"
              />
              <div
                class="mt-4 font-ibm-plex-sans text-sm italic dark:text-slate-400"
              >
                Illustration by <a
                  class="text-blue-600 transition duration-200 hover:text-blue-400"
                  href="https://icons8.com/illustrations/author/zD2oqC8lLBBA"
                  >Icons 8</a
                > from <a
                  class="text-blue-600 transition duration-200 hover:text-blue-400"
                  href="https://icons8.com/illustrations">Ouch!</a
                >
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
    <Footer />
  </body>
</html>
